#pragma once
 
#include"ray.h"

class camera
{
public:

	vec3 leftLow;
	vec3 origin;
	vec3 hori;
	vec3 vert;

	camera() 
	{
		leftLow=vec3(-3.0, 1.0, -1.5);
		hori=vec3(6.0, 0.0, 0.0);
		vert=vec3(0.0, 0.0, 3.0);
		origin=vec3(0.0, 0.0, 0.0);
	}
	ray getRay(float u, float v)
	{
		return ray(origin, leftLow + u*hori + v*vert - origin);
	}
};
